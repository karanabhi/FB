<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87cefa"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.feedback.RatingsStats" >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        

    <TextView
        android:id="@+id/textView_ratings_stats_rate_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/rate_us"
        android:textColor="#000000"
        android:textSize="30dp" />

    <RatingBar
        android:id="@+id/ratingBar_ratings_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:indeterminateTint="@android:color/white"
        android:numStars="5"
        android:progressBackgroundTint="@android:color/white"
        android:progressTint="#bf0d0d"
        android:rating="0.0"
        android:stepSize="1.0" />

    <TextView
        android:id="@+id/textView_rating_stats_review_highlights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_highlights"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView_rating_stats_avg_rating"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RatingBar
        android:id="@+id/ratingBar_rating_stats_avg_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:indeterminateTint="@android:color/white"
        android:progressBackgroundTint="@android:color/white"
        android:progressTint="#bf0d0d"
        
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textView_ratings_stats_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ProgressBar
        android:id="@+id/progressBar_rating_stats_5_star"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140dp"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progressBar_rating_stats_4_star"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140dp"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progressBar_rating_stats_3_star"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140dp"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progressBar_rating_stats_2_star"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140dp"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progressBar_rating_stats_1_star"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140dp"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="178dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/listView_ratings_stats_user_review"
                android:layout_width="match_parent"
                android:layout_height="180dp" >
            </ListView>
        </LinearLayout>
    </ScrollView>
    
    </LinearLayout>
    </ScrollView>

</LinearLayout>