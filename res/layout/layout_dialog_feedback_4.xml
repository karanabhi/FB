<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="FEEDBACK"
                android:textColor="#1382b0"
                android:textSize="30dp"
                android:typeface="sans" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="We appreciate your gesture.Your feedback is valuable to us."
                android:textColor="#000000"
                android:textSize="20dp"
                android:typeface="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="Please let us know how can we be the best in serving you."
                android:textColor="#000000"
                android:textSize="20dp"
                android:typeface="monospace" />

            <EditText
                android:id="@+id/editText_4_stars_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#1382b0"
                android:ems="10"
                android:hint="Your Suggestions......."
                android:inputType="textMultiLine"
                android:textColor="#1874cd"
                android:textColorHint="#1382b0" />

            <Button
                android:id="@+id/button_4_stars_submit"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#1382b0"
                android:text="@string/submit" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>