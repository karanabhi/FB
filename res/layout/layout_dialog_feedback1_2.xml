<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87cefa"
    android:backgroundTint="@android:color/holo_red_light"
    android:foregroundTint="@android:color/holo_red_light"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We appreciate your gesture.Your feedback is valuable to us." 
        android:textColor="#000000"
        android:layout_marginTop="30dp" 
        android:layout_marginBottom="20dp"
        android:textSize="15dp"
        android:typeface="monospace"/>
   

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We deeply regret the inconvenience caused to you."
        android:layout_marginTop="10dp" 
        android:textColor="#000000"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please let us know about your dissatisfaction." 
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*I agree to recieve a call from the service provider on this feedback" 
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:id="@+id/spnr_ratings_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#a26b14"
        android:entries="@array/array_feedback"
        android:textColor="#000000" />
    
    <EditText android:id="@+id/editText_ratings_any_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Your remarks"
        android:textColorHint="#fa019f"
        android:inputType="textMultiLine" 
        android:visibility="gone"
        android:textColor="#000000"/>
    
    <Button android:id="@+id/button_any_others_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit" 
        android:layout_gravity="center"/>
        />
        />

</LinearLayout>